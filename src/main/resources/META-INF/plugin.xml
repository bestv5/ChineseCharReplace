<idea-plugin>
    <id>com.haojiyou.ChineseCharReplacce</id>
    <name>ChineseCharReplacce</name>
    <vendor email="lixr873@163.com" url="https://123.com">bestxu</vendor>
    <description>
        1. 中文字符替换成英文字符插件.
        2. 注释内不进行替换
        3. 支持自定义配置替换字符.
    </description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable parentId="tools" instance="com.haojiyou.cnChar.CnCharSettingComponent"
                             id="com.haojiyou.CnCharSetting" displayName="ChineseCharReplacce"
                             nonDefaultProject="true"/>
    </extensions>

    <actions>
        <action id="ChineseCharReplace"
                class="com.haojiyou.cnChar.EditorHandlerIllustration">
        </action>
    </actions>

</idea-plugin>